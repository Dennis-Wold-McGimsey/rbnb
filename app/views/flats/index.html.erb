

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://mir-s3-cdn-cf.behance.net/project_modules/2800_opt_1/3f1c6477563161.5c8ae268d2efb.png);">
  <div class="container"style="margin-top: -20px;">
    <h1><strong>View flats to rent for your perfect holiday!</strong></h1>
  </div>
</div>

<div class="index-container ">
  <div class="grid-list column ">
    <% @flats.each do |flat| %>
      <% if flat.photo.present? %>
       <%= link_to flat_path(flat), style: "text-decoration: none" do %>
        <div class="back_images" style="background-image: url('<%= cl_image_path flat.photo.key %>')">
          <p class="city-name"><%= flat.city %></p>
        </div>
        <% end %>
      <% else %>
        <%= link_to flat_path(flat) do %>
         <div class="back_images" style="background-image: url('<%= image_path "logo.png" %>')">
         </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div id="map" class="column" style="width: 100%; height: 90vh;" data-controller="map"  data-map-markers-value="<%= @markers.to_json %>"  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
