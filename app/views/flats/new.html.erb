<p>Create a new flat </p>

<%= simple_form_for(@flat) do |f| %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :guests_allowed %>
  <%= f.input :photo, as: :file %>

  <%= f.submit class:"btn_red" %>

<% end %>




<%=  link_to "Go back to Home page", flats_path, class: "btn_red" %>
